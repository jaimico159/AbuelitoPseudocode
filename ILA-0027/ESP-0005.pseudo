def update
  noti_temp = NotificationTemplate.find(params[:id])
  
  respond_to do |format|
  if noti_temp.update
    format.html { redirect_to noti_temp, notice: 'Plantilla Editada correctamente' }
  else
    format.html { render :new, alert: 'No se pudo editar Plantilla' }
  end
end